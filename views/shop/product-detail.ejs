<%-include('../includes/head.ejs')%>
<link rel="stylesheet" href="/product-detail.css">
</head>
<body>

    <%-include('../includes/navigation_bar.ejs')%>

    <main class="detailsMain">
        <h1 class="productTitle"><%=product.title%></h1>
        <hr>
        <div>
            <img src="/<%=product.imageUrl%>" class="card__image_detail" alt="<%=product.title%>">
        </div>
        <h2><%=product.price%></h2>
        <p><%=product.description%></p>


        <% if(isAuthenticated) { %>

            <form action="/cart" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="detailCartButton" type="submit">Add to Cart</button>
                <input type="hidden" name="productId" value="<%=product._id%>">
            </form>
            
            <% } %>


    </main>
    <%-include('../includes/end.ejs')%>