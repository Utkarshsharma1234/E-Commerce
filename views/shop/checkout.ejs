<%-include('../includes/head.ejs')%>
</head>
<body>

    <%-include('../includes/navigation_bar.ejs')%>
    <main>
        <ul>
            <% products.forEach(p =>{ %>
                <li class="cart__item">
                    <h1>Product : <%=p.productId.title%></h1>
                    <h2>Price : <%= p.productId.price %></h2>
                    <h2>Quantity : <%=p.quantity%></h2>
                    </li>
                <% }) %>
        </ul>
        <div>
            <h2>Total Sum - <%=totalSum%></h2>
        </div>
        <div>
            <form action="/create-order" method="POST">
                <script
                  src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="pk_test_51NA8OqSIdoDtrleWc6tuHpotPUl717EqLi5ac7nCT8skdtad29hnIWP7z8xsjIFday7JVT3beGZIHfckBfQ8gAEP00P0LW5McI"
                  data-amount="<%= totalSum * 100 %>"
                  data-name="Your Order"
                  data-description="All the items are totaled."
                  data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                  data-locale="auto"
                  data-currency="usd">
                </script>
            </form>
        </div>
    </main>
    <%-include('../includes/end.ejs')%>