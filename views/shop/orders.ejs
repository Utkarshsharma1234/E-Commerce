<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation_bar.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order - # <%= order._id %></h1>
                            <h3><a href="/orders/<%= order._id %>">Download the Invoice</a></h3>
                            <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> (<%= p.quantity %>)</li>
                                    <li class="orders__products-item">  Price - <%=p.product.price%></li>
                                <% }); %>
                            </ul>
                            <h3>Total Cost - <%= order.TotalCost%></h3>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>