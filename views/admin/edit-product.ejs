<!-- yeh woh waali file h jo user ko website start hote hi dikhegi isko hum shop.js ke routes me daal denge kyoki wahi se rendering ho rhi h-->
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/add-product.css">
</head>
<body>
    <%-include('../includes/navigation_bar.ejs')%>

    <main class="addProductPage">
        <% if(errorMessage) { %>
            <div><%= errorMessage%></div>
        <% } %>

        <div class="addProductForm">
            <div class="formData">
                <form action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST" enctype="multipart/form-data">
                    <div class="form-control">
                        <label for="title" class="productLabel">Title</label>
                            <input type="text" name="title" id="title" value="<% if (editing || hasError) { %> <%=product.title%> <% } %>">
                    </div>
                    <div class="form-control">
                        <label for="image" class="productLabel">Image</label>
                        <input 
                            type="file" 
                            name="image" 
                            id="image" >
                    </div>
                    <div class="form-control">
                        <label for="price" class="productLabel">Price</label>
                            <input type="number" name="price" id="price" value="<% if(editing || hasError) { %> <%=product.price%> <% } %>">
                    </div>
                    <div class="form-control">
                        <label for="description" class="productLabel">Description</label>
                        <textarea name="description" id="description" cols="30" rows="10"><% if(editing || hasError) { %> <%=product.description%> <% } %></textarea>
                    </div>
        
                    <% if(editing) { %> 
                <div class="addProductButtonDiv">
                        <input type="hidden" value="<%=product._id%>" name="productId"> 
                    <% } %> 
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="addProductButton"><% if (editing) { %> Update Product <% } else { %> Add Product <% } %></button>
                </div>
               </form>
            </div>
        </div>
       
    </main>
</body>
</html>